@model PruebaLucasFelizIBSystems.Models.Clientes

@{
    ViewBag.Title = "Crear cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear cliente</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
